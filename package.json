{
  "name": "zipper",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "seed": "yarn dotenv -c .env.local ts-node apps/zipper.works/prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "scripts": {
    "build": "yarn link-env && turbo run build",
    "dev": "NODE_OPTIONS=--max-old-space-size=4096 yarn link-env && turbo run dev --parallel",
    "link-env": "sh ./bin/link-env-files.sh",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "ts-node": "ts-node -T",
    "deno:dev": "yarn dotenv -c .env.local ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" ./bin/ts/deno-dev.ts",
    "deno:deploy": "yarn dotenv -c .env.local ts-node --compiler-options \"{\\\"module\\\":\\\"commonjs\\\"}\" ./bin/ts/deno-deploy.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "dotenv": "^16.0.3",
    "get-port-please": "^3.0.1",
    "prettier": "latest",
    "signale": "^1.4.0",
    "turbo": "^1.7.3"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "packageManager": "yarn@1.22.19"
}
