{
  "name": "zipper",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "seed": "bun run dotenv -c .env.local bun run apps/zipper.dev/prisma/seed.ts"
  },
  "engines": {
    "node": ">=18.14.0"
  },
  "scripts": {
    "build": "bun install; bun run env:link; turbo run build",
    "dev": "bun install; bun run env:link; bun run migrate; turbo run dev --parallel",
    "env:link": "sh ./bin/link-env-files.sh",
    "env:update": "bun run dotenv -c .env.local bun run ./bin/ts/env-update.ts",
    "get-started": "bun install; bun run env:update; bun run env:link; bun run migrate; bun run seed",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "migrate": "bun run workspace zipper.dev db-migrate-dev",
    "seed": "bun run workspace zipper.dev db-seed",
    "studio": "bun run workspace zipper.dev prisma studio"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/signale": "^1.4.4",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "get-port-please": "^3.0.1",
    "prettier": "latest",
    "signale": "^1.4.0",
    "turbo": "^1.7.3"
  },
  "prettier": {
    "printWidth": 80,
    "trailingComma": "all",
    "singleQuote": true
  },
  "packageManager": "bun run@1.22.19"
}
