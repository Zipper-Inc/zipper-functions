  "name": "zipper.dev",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build:1-prisma": "prisma generate",
    "build:2-next": "next build",
    "build:3-tsc": "tsc --project tsconfig.server.json",
    "build": "run-s build:*",
    "db-seed": "prisma db seed",
    "db-migrate-dev": "yarn prisma migrate dev",
    "dev": "yarn nodemon -x \"yarn ts-node ./src/server.ts || touch ./src/server.ts\" --watch ./src/server.ts",
    "dev:relay": "yarn deno:dev ./src/workers/subhosting-relay.deno.ts port=3001",
    "dx": "run-s db-up db-migrate-dev db-seed dev",
    "start": "run-s db-migrate-dev db-seed dev",
    "start:production": "yarn prisma migrate deploy && NODE_ENV=production node ./dist/server.js",
    "start:test": "next start",
    "lint": "eslint src",
    "lint-fix": "yarn lint --fix",
    "test-dev": "start-server-and-test dev 3000 test",
    "test-start": "start-server-and-test start 3000 test",
    "test": "run-s test:*",
    "test:unit": "jest -i --detectOpenHandles",
    "postinstall": "yarn prisma generate"
  },
  "prisma": {
    "seed": "yarn ts-node prisma/seed.ts"
  },
